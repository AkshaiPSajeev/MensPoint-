<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="container mt-5 pl-5 border shadow ">
            <h2 class="text-center m-4">Add Category Offer</h2>
     
            <form action="/admin/add-categoryOffer" method="post" id="formCategoryOffer">
                <div class="form-group">
                    <label for="">Category</label>
                    <input type="text" class="form-control " name="CategoryName"  id="" value="{{category.CategoryName}}" disabled>
                     <input type="text" class="form-control " name="CategoryName"  id="" value="{{category.CategoryName}}" hidden>
                </div>
                 <div class="form-group">
                    <label for="">Offer in Percentage</label>
                    <input type="number" class="form-control" min="5" max="90" name="OfferValue"  id="">
                </div>
                <div class="text-center pt-3">
                     <button type="submit" class="btn btn-primary ">Add Offer</button><br>
                </div>
               
            </form>
        </div>
    </div>
</div>
