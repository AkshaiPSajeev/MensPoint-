<section class="h-100 gradient-custom">

  {{#if products}}
  <div class="container py-5">
    <div class="row d-flex justify-content-center my-4">
      <div class="col-md-8">
    
        <div class="card mb-4">
           <div class="card-header py-3">
            <h5 class="mb-0">Cart - {{products.length}} items</h5>
          </div> 
          <div class="card-body">
            <!-- Single item -->

            {{#each products}}
            
            <div class="row">
              <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                <!-- Image -->
                <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                  <img src="/product-images/{{this.product._id}}.jpg"
                    class="w-100 img-fluid" alt="" />
                  <a href="#!">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                  </a>
                </div>
                <!-- Image -->
              </div>

              <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                <!-- Data -->
                <h3>{{this.product.Name}}</h3>
                 {{#if this.product.Offer.Status}}
                 <h5> &#8377; {{this.product.DiscountedPrice}}</h5>
                  <span style="color: #7e837f;"><strong><s>&#8377;{{this.product.Price}}</s></strong></span> &nbsp;
                  <span style="color: #41a65a;"><strong>{{this.product.Offer.Value}}% Off</strong></span> <br>
                 {{else}}
                 <h5> &#8377; {{this.product.Price}}</h5>
                  {{/if}}
             
               
               
               
           
              </div>

          
            </div>
            <!-- Single item -->
           
           
            <div class="mt-3 mx-4">
               <button onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)" id="minusbutton{{this.product._id}}" >-</button>
              <input type="text" value="{{this.quantity}}" size="1" disabled class="text-md-center bolder" id="{{this.product._id}}">
             
               <button onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)">+</button>
                <a href="/remove-cart-item/{{this._id}}/{{this.product._id}}" class="mx-5 text-secondary font-weight-bold cart-remove">Remove</a>
            </div>
           
             
            
          
             <hr class="my-4" />  
          {{/each}}

          
          
          </div>
        </div>
        
    
   
      </div>
      <div class="col-md-4 ">
        <h3 class="text-center">Price Details</h3>
        <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">Product</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price </th>
      <th scope="col">Total </th>
    </tr>
  </thead>
  <tbody>
   
      {{#each orderSummary.Products}}
       <tr>
        
      <th scope="row">{{counter @index}}</th>
      <td><span id="{{this._id}}ProductNameSummary">{{this.Name}}</span></td>
       <td><span id="{{this._id}}QuantitySummary">{{this.Quantity}}</span></td>
      {{#if this.Offer.Status}}
      <td><span id="{{this._id}}ProductPriceSummary">{{this.DiscountedPrice}}</span></td>
        <td><span id="{{this._id}}TotalPriceSummary">{{this.TotalProductPrice}}</span></td>
      {{else}}
        <td><span id="{{this._id}}ProductPriceSummary">{{this.Price}}</span></td>
          <td><span id="{{this.product._id}}TotalPriceSummary">{{this.TotalProductPrice}}</span></td>
      {{/if}}
      
     
       </tr>
       {{/each}}
     
  
  </tbody>
</table>
<div>
  <span><strong>Total Amount :</strong></span>
        <strong><span id="total">{{orderSummary.TotalAmount}}</span></strong><br>
        <a href="/place-order" class="btn btn-primary mt-3 mx-auto">Place Order</a>
</div>

     
      </div>
    </div>
  </div>
  {{else}}
  <div class="container ">
    <div class="row mx-auto mt-5">
      <h2>Cart Empty</h2>
    </div>
  </div>
  {{/if}}
</section>
